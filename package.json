{
  "name": "eazy-ui-next",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "main": "index.js",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "scripts": {
    "test": "vitest",
    "commit": "cz",
    "lint": "eslint --fix",
    "postinstall": "simple-git-hooks",
    "build:ui": "pnpm -F @eazy-ui-next/components build",
    "build:utils": "pnpm -F @eazy-ui-next/utils build",
    "publish:components": "pnpm -F @eazy-ui-next/components pub",
    "publish:utils": "pnpm -F @eazy-ui-next/utils pub"
  },
  "devDependencies": {
    "@antfu/eslint-config": "1.0.0-beta.26",
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@esbuild-kit/cjs-loader": "^2.4.4",
    "@pnpm/types": "^9.3.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/gulp": "^4.0.15",
    "@types/gulp-autoprefixer": "^0.0.35",
    "@types/gulp-clean-css": "^4.3.2",
    "@types/gulp-sass": "^5.0.2",
    "@types/node": "^18.16.20",
    "@types/undertaker": "^1.2.9",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.2",
    "commitizen": "^4.3.0",
    "cz-customizable": "^7.0.0",
    "esbuild": "^0.19.4",
    "eslint": "^8.51.0",
    "execa": "^8.0.1",
    "fast-glob": "^3.3.1",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-sass": "^5.1.0",
    "lint-staged": "^14.0.1",
    "rimraf": "^5.0.5",
    "rollup": "^3.29.4",
    "rollup-plugin-esbuild": "^4.9.3",
    "sass": "^1.69.3",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2",
    "unplugin-vue-components": "^0.25.2",
    "unplugin-vue-define-options": "^1.3.18",
    "vitest": "1.0.0-beta.1",
    "vue-tsc": "^1.8.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-configrc.cjs"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "npx --no -- commitlint --edit ${1}"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": "eslint --fix"
  }
}
